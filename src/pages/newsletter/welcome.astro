---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";
import Layout from "@/layouts/Layout.astro";
---

<Layout title={`Welcome | ${SITE.title}`} description="Welcome to the newsletter! You're all set to receive updates.">
  <Header />

  <main
    id="main-content"
    class="mx-auto flex max-w-3xl flex-1 items-center justify-center"
  >
    <div class="mb-14 flex flex-col items-center justify-center text-center px-4">
      <div class="mb-6">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-20 w-20 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
        </svg>
      </div>
      <h1 class="text-4xl sm:text-5xl font-bold mb-4">You're In!</h1>
      <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-md">
        Thanks for confirming your subscription. You'll receive the next newsletter directly in your inbox.
      </p>
      <LinkButton
        href="/"
        class="text-lg underline decoration-dashed underline-offset-8"
      >
        Back to the blog
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>
