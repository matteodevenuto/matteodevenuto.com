{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "astro",
  "redirects": [
    {
      "source": "/:path*.md",
      "has": [{ "type": "host", "value": "matteodevenuto.com" }],
      "missing": [{ "type": "header", "key": "accept", "value": "(?i).*text/markdown.*" }],
      "destination": "https://matteodevenuto.com/:path*",
      "permanent": false
    },
    {
      "source": "/:year(\\d{4})/:month(\\d{2})/:day(\\d{2})/:slug",
      "destination": "/blog/:slug",
      "permanent": true
    },
    {
      "source": "/blog/:year(\\d{4})/:month(\\d{2})/:day(\\d{2})/:slug",
      "destination": "/blog/:slug",
      "permanent": true
    },

    {
      "source": "/categories/:category(.*)",
      "destination": "/tags/:category",
      "permanent": true
    },
    { "source": "/tag/:tag", "destination": "/tags/:tag", "permanent": true },
    {
      "source": "/20:year/:month/:day/:slug(.*)",
      "destination": "/blog/:slug",
      "permanent": true
    },
    {
      "source": "/blog/a-new-beginning/",
      "destination": "/blog/finding-my-spark-again",
      "permanent": true
    },
    {
      "source": "/blog/llm-codes-transform-developer-docs",
      "destination": "/blog/2025/llm-codes-transform-developer-docs",
      "permanent": true
    },
    {
      "source": "/blog/understanding-codebases-with-ai-gemini-workflow",
      "destination": "/blog/2025/understanding-codebases-with-ai-gemini-workflow",
      "permanent": true
    },
    {
      "source": "/:path*",
      "has": [
        {
          "type": "host",
          "value": "^(?!(steipete\\.me|www\\.steipete\\.me|steipete\\.md|www\\.steipete\\.md|.*\\.vercel\\.app|.*\\.friendship\\.dev|.*\\.amantus\\.dev|.*\\.sweetistics\\.com)).*$"
        }
      ],
      "destination": "https://matteodevenuto.com/:path*",
      "permanent": true
    }
  ],
  "rewrites": [
    {
      "source": "/pagefind/:path*",
      "destination": "/pagefind/:path*"
    },
    {
      "source": "/",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "(?i).*text/markdown.*"
        }
      ],
      "destination": "/index.md"
    },
    {
      "source": "/(about|archives|blog)",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "(?i).*text/markdown.*"
        }
      ],
      "destination": "/$1.md"
    },
    {
      "source": "/blog/:path*",
      "has": [
        {
          "type": "header",
          "key": "accept",
          "value": "(?i).*text/markdown.*"
        }
      ],
      "destination": "/blog/:path*.md"
    }
  ],
  "headers": [
    {
      "source": "/pagefind/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        },
        {
          "key": "Cross-Origin-Embedder-Policy",
          "value": "unsafe-none"
        }
      ]
    },
    {
      "source": "/(.*).md",
      "headers": [
        {
          "key": "Vary",
          "value": "Accept"
        }
      ]
    },
    {
      "source": "/(|about|archives|blog/.*)",
      "headers": [
        {
          "key": "Vary",
          "value": "Accept"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Content-Security-Policy",
          "value": "default-src 'self' https://matteodevenuto.com https://*.vercel.app https://*.sweetistics.com https://platform.twitter.com https://syndication.twitter.com https://player.vimeo.com https://vimeo.com; script-src 'self' 'unsafe-inline' 'unsafe-eval' blob: data: https://steipete.me https://*.vercel.app https://*.sweetistics.com https://platform.twitter.com https://cdn.syndication.twimg.com https://player.vimeo.com https://vercel.live https://va.vercel-scripts.com; style-src 'self' 'unsafe-inline' https://steipete.me https://*.vercel.app https://*.sweetistics.com https://platform.twitter.com; img-src 'self' data: https: blob: https://ghchart.rshah.org; font-src 'self' https://steipete.me https://*.vercel.app https://*.sweetistics.com; connect-src 'self' https://steipete.me https://*.vercel.app https://*.sweetistics.com https://platform.twitter.com https://player.vimeo.com https://vimeo.com https://vitals.vercel-insights.com https://va.vercel-scripts.com; media-src 'self' https://steipete.me https://*.vercel.app https://*.sweetistics.com https://player.vimeo.com https://vimeo.com; object-src 'none'; frame-ancestors 'none'; frame-src https://platform.twitter.com https://syndication.twitter.com https://player.vimeo.com https://vercel.live https://www.youtube.com https://youtube.com https://*.youtube.com https://www.youtube-nocookie.com https://*.youtube-nocookie.com; worker-src 'self' 'unsafe-inline' blob:"
        }
      ]
    }
  ]
}
